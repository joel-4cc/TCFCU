extends /layout

block content
	section.cover.height-50.imagebg.parallax.text-center(data-overlay="5")
		//- background image
		div.background-image-holder(style="background-image: url(/img/header/loans-auto.jpg); background-position:center bottom; opacity: 1;") 
			//-background image for smaller devices
			img.attachment-full.size-full(width="1600" height="1067" src="/img/header/loans-auto.jpg" alt="" srcset="/img/header/loans-auto.jpg 1600w, /img/header/loans-auto.jpg 300w, /img/header/loans-auto.jpg 768w, /img/header/loans-auto.jpg 1024w" sizes="(max-width: 1600px) 100vw, 1600px")
		div#hero-content.container.pos-vertical-center
			//-div.row
				div.col-sm-12
					h1.text-center Auto Loans
	
	//-section
		div.container
			div.row
				div.col-md-12.text-center
					a.btn.btn-blue(href="/loans")
						i.icon.icon--xs.fa.fa-arrow-left.color--blue(style="margin-right:20px;")
						span.btn__text Back to Loans
	section.unpad--bottom
		.container
			.row
				.col-sm-12
					h2.color--blue Auto/Recreational Loans
					p.
						Purchase or Refinance a new or pre-owned auto or recreational loan (travel trailers, motorhomes, motorcycles, boats, ATV).
	section
		div.container
			div.row
				div.col-md-12
					h5.color--blue.
						Auto Loans
			div.row.mt--2
				div.col-md-12
					p.unmarg.
						• Interest rates as low as 1.99% APR
					p.unmarg.
						• Terms up to 84 months
					p.unmarg.
						• $0 down financing
					p.unmarg.
						• Mechanical Breakdown Insurance (MBI) and Guaranteed Asset Protection (GAP) available
					p.unmarg.
						• On-site dealership financing available
					p.unmarg.
						• Find your <a href="https://www.cudlautosmart.com/" target=_"blank">new car</a> today!
				div.col-md-12
					a.btn.btn-blue(href="https://uat-internetloanapplication.cudl.com/tulare/" target="_blank")
						span.btn__text Apply Now


			div.row.mt--1
				div.col-md-12
					h5.color--blue.
						Auto Starter Program
					p.
						Just starting out? No problem with our Auto Starter First Time Buyer Program.
			div.row.mt--2.final
				div.col-md-12
					p.unmarg.
						• Interest Rates as low as 7.99% APR
					p.unmarg.
						• Terms up to 72 months
					p.unmarg.
						• Minimal cash down requirements
					p.unmarg.
						• Flexible approval criteria

				div.col-md-12
					a.btn.btn-blue(href="https://uat-internetloanapplication.cudl.com/tulare/" target="_blank")
						span.btn__text Apply Now

			div.row.mt--1
				div.col-md-12
					h5.color--blue.
						Recreational Vehicle Loans

			div.row.mt--2.final
				div.col-md-12
					p.unmarg.
						• Interest Rates as low as 3.75% APR
					p.unmarg.
						• Terms up to 120 months
					p.unmarg.
						• Competitive rates and discounts available with loyalty products

				div.col-md-12
					a.btn.btn-blue(href="https://uat-internetloanapplication.cudl.com/tulare/" target="_blank")
						span.btn__text Apply Now

				
	//-section.imagebg.height-30.parallax
		.background-image-holder
			img(src="/img/test1.jpg")
