extends /layout

block content
	section.cover.height-50.imagebg.parallax.text-center(data-overlay="5")
		//- background image
		div.background-image-holder(style="background-image: url(/img/header/loans-credit-cards.jpg); background-position:center bottom; opacity: 1;") 
			//-background image for smaller devices
			img.attachment-full.size-full(width="1600" height="1067" src="/img/header/loans-credit-cards.jpg" alt="" srcset="/img/header/loans-credit-cards.jpg 1600w, /img/header/loans-credit-cards.jpg 300w, /img/header/loans-credit-cards.jpg 768w, /img/header/loans-credit-cards.jpg 1024w" sizes="(max-width: 1600px) 100vw, 1600px")
		div#hero-content.container.pos-vertical-center
			//-div.row.text-center
				div.col-sm-12
					h1 Credit Cards
	//-section
		div.container
			div.row
				div.col-md-12.text-center
					a.btn.btn-blue.type--uppercase(href="/loans")
						i.icon.icon--xs.fa.fa-arrow-left.color--blue(style="margin-right:20px;")
						span.btn__text Back to Loans

	section.unpad--bottom
		.container
			.row
				.col-sm-12
					h2.color--blue Credit Cards
	section
		div.container

			div.row
				div.col-md-12
					h5.color--blue Platinum Visa
			
			div.row.mt--2
				div.col-md-12
					p.unmarg.
						• Earn <a href="https://www.uchooserewards.com">rewards</a> to redeem for cash, merchandise, and travel
					p.unmarg.
						• Preferred pricing with low, fixed interest rate
					p.unmarg.
						• Low cost balance transfer fees
					p.unmarg.
						• Free annual transaction summary to help you analyze your spending!

				div.col-md-12
					a.btn.btn-blue(href="https://uat-internetloanapplication.cudl.com/tulare/")
						span.btn__text Get the Card			
			
			div.row.mt--1
				div.col-md-12
					h5.color--blue Classic Visa
			
			div.row.mt--2
				div.col-md-12
					p.unmarg.
						• The everyday card for your everyday purchases
					p.unmarg.
						• No penalty rates
					p.unmarg.
						• No annual fee
			
				div.col-md-12
					a.btn.btn-blue(href="https://uat-internetloanapplication.cudl.com/tulare/")
						span.btn__text Get the Card	

			

			div.row.mt--1
				div.col-md-12
					h5.color--blue Student Visa
					p.
						In school and need a convenient way to spend while establishing credit?
			
			div.row.mt--2.final
				div.col-md-12
					p.unmarg.
						• Affordable interest rate
					p.unmarg.
						• Great way to build credit or improve your score
					p.unmarg.
						• Opportunity to establish financial independence
				div.col-md-12
					a.btn.btn-blue(href="https://uat-internetloanapplication.cudl.com/tulare/")
						span.btn__text Get the Card
